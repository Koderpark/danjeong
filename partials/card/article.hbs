{{#foreach posts}}
  <article class="card card-article u-shadow">
    <a href="{{url}}" class="">
      <figure>
        <div class="card-image">
          {{#if feature_image}}
            {{> "card/image" href=feature_image size="600px" alt=title}}
          {{else}}
            <div class="img"></div>
          {{/if}}
        </div>
      </figure>

      <div class="card-desc">
        <header class="w-full">
          {{#if primary_tag}}
            <div class="mb-2">
              {{> "util/list-tag" nested=true }}
            </div>
          {{/if}}

          <p class="text-xl break-keep font-bold">
            {{title}}
          </p>

          {{#if excerpt}}
            <div class="break-keep text-sm mt-2">
              {{excerpt words="12"}}
            </div>
          {{/if}}
        </header>
      </div>
    </a>
  </article>
{{/foreach}}