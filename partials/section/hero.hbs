<header class="gh-canvas">
  <div class="hero">
    <div class="hero-title">
      {{#is "post"}}
        <span class="hero-sub">
          <time datetime="{{date format="YYYY-MM-DD"}}">{{date
              format="YYYY-MM-DD"
            }}</time>
          <span class="bull">&bull;</span>
          {{reading_time}}
        </span>

        <h1 class="text-5xl font-bold">{{title}}</h1>

        {{#if custom_excerpt}}
          <p class="text-xl mt-4">{{custom_excerpt}}</p>
        {{/if}}

        {{#if tags}}
          <div class="place-self-center w-fit mt-4">
            {{> "pill-tag"}}
          </div>
        {{/if}}

        {{#if feature_image_caption}}
          <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
      {{/is}}

      {{#is "tag"}}
        <span class="hero-sub">
          {{#get "posts"}}{{posts.length}}{{/get}}개의 글
        </span>

        <h1 class="text-5xl font-bold">{{name}}</h1>
        {{#if description}}
          <p class="text-xl mt-4">{{description}}</p>
        {{/if}}
      {{/is}}
    </div>

    {{#if feature_image}}
      <figure class="hero-image">
        <picture>
          <source
            srcset="
            {{img_url feature_image size="xxs" format="avif"}} 30w,
