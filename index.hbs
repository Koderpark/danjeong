{{!< default}}
<div class="flex flex-col">
  {{#> "container"}}
    {{> "section/hero-index"}}
  {{/ "container"}}

  {{#> "fullscreen"}}
    {{#get "posts" filter="featured:true" limit="4" include="tags,authors"}}
      {{> "section/featured"}}
    {{/get}}
  {{/ "fullscreen"}}

  
  {{#> "list"}}
    {{> "section/title" title="최신 글" subtitle="recent article"}}
    {{> "section/article-inf"}}
  {{/ "list"}}

  <div class="gh-container">
    {{! If JS isn't enabled, fallback to standard pagination }}
    <noscript>
      <div class="gh-pagination">
        {{pagination}}
      </div>
    </noscript>
  </div>
</div>